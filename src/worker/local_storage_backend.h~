#pragma once
#include <string>
#include <filesystem>

struct LocalStorageBackend : public StorageBackend {
    std::string root;

    explicit LocalStorageBackend(std::string r) : root(std::move(r)) {}

    bool exists(const std::string& path) override {
        return std::filesystem::exists(root + "/" + path);
    }
};
